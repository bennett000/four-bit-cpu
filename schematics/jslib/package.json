{
  "name": "ngspice-test-runner",
  "version": "0.1.0",
  "description": "Program that augments ngspice netlists with tests based on JSON, then executes the tests, parses the results, and reports pass/fail",
  "author": "Michael J. Bennett",
  "license": "GPL-3.0",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.21",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.1"
  },
  "scripts": {
    "prebuild": "rimraf ./js",
    "build": "tsc",
    "test": "jest",
    "test:w": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts}": [
      "prettier --write --trailing-comma all --single-quote",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/*.d.ts",
      "!**/interfaces.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "coverage/",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
